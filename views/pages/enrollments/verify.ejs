<%- include('../../partials/header') %>

<section class="content-block light-grey">
  <% if (typeof error !== 'undefined' && error) { %>
    <div class="alert alert-danger">
      <h1>Access Info</h1>
      <p><%= error %></p>
      <p>If you have trouble, contact <a href="mailto:training@theodi.org">training@theodi.org</a>.</p>
    </div>
  <% } else if (typeof enrollments !== 'undefined' && Array.isArray(enrollments)) { %>
    <h1>Your Course Access</h1>
    <p><strong>Email:</strong> <%= email %></p>

    <div class="card mt-3">
      <div class="card-header">
        <h3>How to access your courses</h3>
      </div>
      <div class="card-body">
        <ol>
          <li>
            <strong>Sign in to Moodle with your ODI account</strong>
            <br>
            <a href="<%= moodleRootUrl %>/login/index.php" target="_blank" class="btn btn-outline-primary btn-sm mt-2">
              <i class="fa fa-external-link"></i> Go to Moodle
            </a>
            <br>
            <small class="text-muted">Use the "Sign in with ODI Account" option. Sign in with the same email shown above.</small>
          </li>
          <li class="mt-3">
            <strong>Donâ€™t have an ODI account?</strong> Create one, then sign in to Moodle.
            <br>
            <a href="https://theodi.org/account/register/" target="_blank" class="btn btn-outline-primary btn-sm mt-2">
              <i class="fa fa-external-link"></i> Create ODI Account
            </a>
            <br>
            <small class="text-muted">In order to access your course you must create an ODI account with the same email address as shown above.</small>
          </li>
        </ol>
      </div>
    </div>

    <div class="card mt-3">
      <div class="card-header">
        <h3>Courses</h3>
      </div>
      <div class="card-body">
        <% if (enrollments.length === 0) { %>
          <div class="alert alert-warning">No courses found for this booking.</div>
        <% } else { %>
          <table class="table">
            <thead>
              <tr>
                <th>Course</th>
                <th>Enrolled</th>
                <th>Accessed</th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <% enrollments.forEach(function(e){ %>
                <tr>
                  <td><%= e.course_name || ('Course #' + e.course_id) %></td>
                  <td>
                    <% if (e.enrolled) { %>
                      <i class="fa fa-check text-success" aria-label="Enrolled: Yes" title="Enrolled: Yes">Yes</i>
                    <% } else { %>
                      <i class="fa fa-times text-muted" aria-label="Enrolled: No" title="Enrolled: No">No</i>
                    <% } %>
                  </td>
                  <td>
                    <% if (e.accessed) { %>
                      <i class="fa fa-check text-success" aria-label="Accessed: Yes" title="Accessed: Yes">Yes</i>
                    <% } else { %>
                      <i class="fa fa-times text-muted" aria-label="Accessed: No" title="Accessed: No">No</i>
                    <% } %>
                  </td>
                  <td>
                    <% if (e.enrolled) { %>
                      <a href="<%= moodleRootUrl %>/course/view.php?id=<%= e.course_id %>" target="_blank" class="btn btn-primary btn-sm">
                        <i class="fa fa-external-link"></i> Go to Course
                      </a>
                    <% } %>
                  </td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        <% } %>
      </div>
    </div>

  <% } %>
  <div class="card mt-4">
    <div class="card-header">
      <h3>Need Help?</h3>
    </div>
    <div class="card-body">
      <p>If you're having trouble accessing your course:</p>
      <ul>
        <li>Make sure you've created an ODI account at <a href="https://theodi.org/account/register/" target="_blank">theodi.org</a></li>
        <li>Ensure you can log into Moodle at <a href="<%= moodleRootUrl %>/login/index.php" target="_blank"><%= moodleRootUrl.replace(/^https?:\/\//, '') %></a></li>
        <li>Use the "Sign in with ODI Account" option in Moodle</li>
        <li>Contact support if you continue to have issues</li>
      </ul>
    </div>
  </div>
</div>
</section>

<script>
// No additional steps required; enrollment is already complete. This page simply
// provides live status and links to Moodle for access.
</script>

<%- include('../../partials/footer') %>
