<%- include('../../partials/header') %>

<section class="content-block light-grey">
  <% if (typeof error !== 'undefined' && error) { %>
    <div class="alert alert-danger">
      <h1>Invalid Verification Link</h1>
      <p><%= error %></p>
      <p>Please check your email for the correct verification link or contact support.</p>
    </div>
  <% } else if (typeof enrollment !== 'undefined' && enrollment) { %>
    <h1>Complete Your Course Enrollment</h1>
    
    <div class="row">
      <div class="col-md-8">
        <div class="card">
          <div class="card-header">
            <h3>Course Details</h3>
          </div>
          <div class="card-body">
            <table class="table table-borderless">
              <tr>
                <td><strong>Course:</strong></td>
                <td><%= enrollment.course_name %></td>
              </tr>
              <tr>
                <td><strong>Your Email:</strong></td>
                <td><%= enrollment.user_email %></td>
              </tr>
              <tr>
                <td><strong>Enrollment Date:</strong></td>
                <td><%= new Date(enrollment.enrollment_date).toLocaleDateString('en-GB') %></td>
              </tr>
              <tr>
                <td><strong>Access Expires:</strong></td>
                <td><%= new Date(enrollment.expiry_date).toLocaleDateString('en-GB') %></td>
              </tr>
            </table>
          </div>
        </div>

        <div class="card mt-4">
          <div class="card-header">
            <h3>Next Steps</h3>
          </div>
          <div class="card-body">
            <ol>
              <li>
                <strong>Create an ODI Account</strong> (if you haven't already)
                <br>
                <a href="https://theodi.org/account/register/" target="_blank" class="btn btn-outline-primary btn-sm mt-2">
                  <i class="fa fa-external-link"></i> Create ODI Account
                </a>
              </li>
              <li>
                <strong>Login to Moodle</strong> using your ODI account
                <br>
                <a href="https://moodle.learndata.info/login/index.php" target="_blank" class="btn btn-outline-primary btn-sm mt-2">
                  <i class="fa fa-external-link"></i> Go to Moodle
                </a>
                <br>
                <small class="text-muted">Use "Sign in with ODI Account" option</small>
              </li>
              <li>
                <strong>Complete your enrollment</strong> by clicking the button below
                <br>
                <button id="completeEnrollmentBtn" class="btn btn-success btn-lg mt-3">
                  <i class="fa fa-check"></i> Complete Enrollment
                </button>
              </li>
            </ol>
          </div>
        </div>

        <div class="card mt-4">
          <div class="card-header">
            <h3>Need Help?</h3>
          </div>
          <div class="card-body">
            <p>If you're having trouble completing your enrollment:</p>
            <ul>
              <li>Make sure you've created an ODI account at <a href="https://theodi.org/account/register/" target="_blank">theodi.org</a></li>
              <li>Ensure you can log into Moodle at <a href="https://moodle.learndata.info/login/index.php" target="_blank">moodle.learndata.info</a></li>
              <li>Use the "Sign in with ODI Account" option in Moodle</li>
              <li>Contact support if you continue to have issues</li>
            </ul>
          </div>
        </div>
      </div>

      <div class="col-md-4">
        <div class="card">
          <div class="card-header">
            <h4>Resend Instructions</h4>
          </div>
          <div class="card-body">
            <p>Lost your email? We can resend the enrollment instructions.</p>
            <button id="resendEmailBtn" class="btn btn-outline-secondary">
              <i class="fa fa-envelope"></i> Resend Email
            </button>
          </div>
        </div>

        <div class="card mt-3">
          <div class="card-header">
            <h4>Status</h4>
          </div>
          <div class="card-body">
            <span class="badge badge-warning badge-lg">Pending Account Creation</span>
            <p class="mt-2 text-muted">Your enrollment is waiting for you to create an ODI account and access Moodle.</p>
          </div>
        </div>
      </div>
    </div>

    <!-- Success Modal -->
    <div class="modal fade" id="successModal" tabindex="-1">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title">Enrollment Complete!</h5>
            <button type="button" class="close" data-dismiss="modal">
              <span>&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <div class="text-center">
              <i class="fa fa-check-circle text-success" style="font-size: 4rem;"></i>
              <h4 class="mt-3">Welcome to your course!</h4>
              <p>You have been successfully enrolled in <strong><%= enrollment.course_name %></strong>.</p>
              <p>You can now access your course in Moodle.</p>
            </div>
          </div>
          <div class="modal-footer">
            <a href="https://moodle.learndata.info/login/index.php" target="_blank" class="btn btn-primary">
              <i class="fa fa-external-link"></i> Go to Moodle
            </a>
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          </div>
        </div>
      </div>
    </div>

    <!-- Error Modal -->
    <div class="modal fade" id="errorModal" tabindex="-1">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title">Enrollment Failed</h5>
            <button type="button" class="close" data-dismiss="modal">
              <span>&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <div class="text-center">
              <i class="fa fa-exclamation-triangle text-warning" style="font-size: 4rem;"></i>
              <h4 class="mt-3">Unable to Complete Enrollment</h4>
              <p id="errorMessage">Please ensure you have created an ODI account and can access Moodle.</p>
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          </div>
        </div>
      </div>
    </div>
  <% } %>
</section>

<script>
$(document).ready(function() {
  <% if (typeof enrollment !== 'undefined' && enrollment) { %>
    // Complete enrollment
    $('#completeEnrollmentBtn').on('click', function() {
      const button = $(this);
      const originalText = button.html();
      
      button.prop('disabled', true).html('<i class="fa fa-spinner fa-spin"></i> Processing...');
      
      fetch(`/enrollments/verify/<%= enrollment.secret_token %>/complete`, {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' }
      })
      .then(response => response.json())
      .then(data => {
        if (data.success) {
          $('#successModal').modal('show');
        } else {
          $('#errorMessage').text(data.message || 'An error occurred while completing your enrollment.');
          $('#errorModal').modal('show');
        }
      })
      .catch(error => {
        console.error('Error:', error);
        $('#errorMessage').text('An error occurred while completing your enrollment. Please try again.');
        $('#errorModal').modal('show');
      })
      .finally(() => {
        button.prop('disabled', false).html(originalText);
      });
    });

    // Resend email
    $('#resendEmailBtn').on('click', function() {
      const button = $(this);
      const originalText = button.html();
      
      button.prop('disabled', true).html('<i class="fa fa-spinner fa-spin"></i> Sending...');
      
      fetch(`/enrollments/<%= enrollment._id %>/resend-email`, {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' }
      })
      .then(response => response.json())
      .then(data => {
        if (data.success) {
          alert('Enrollment email resent successfully!');
        } else {
          alert('Error: ' + data.message);
        }
      })
      .catch(error => {
        console.error('Error:', error);
        alert('An error occurred while resending the email.');
      })
      .finally(() => {
        button.prop('disabled', false).html(originalText);
      });
    });
  <% } %>
});
</script>

<%- include('../../partials/footer') %>
